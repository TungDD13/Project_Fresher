<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    @Styles.Render("~/Content/vendor/bootstrap/css")
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Custom styles for this template -->

    @Styles.Render("~/Content/bower_components/bootstrap/css")
    @Styles.Render("~/Content/dist/css")

    @Styles.Render("~/Content/jusblogcss/css")


</head>
<body>
    @Html.Partial("_Navigation")

    @RenderSection("header", required: false)

    <!-- Main Content -->
    <div class="container body-content">
        <div class="row">
            <div class="col-lg-8 col-sm-12 mx-auto">
                @*<div>*@
                @RenderBody()
            </div>
            <div class="col-lg-4 col-sm-12 mx-auto">
                <input type="text" id="KeyInput" name="KeyInput" class="form-control" placeholder="Search for names.." title="Type in a name">
                @Html.Action("AboutCard", "Home")
                @Html.Action("MostViewedPost", "Posts")
                @Html.Action("LatestPosts", "Posts")
                @Html.Action("PopurlarTags", "Tag")
            </div>
        </div>
    </div>


    <!-- Footer -->
    @Html.Partial("_PartialFooter")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Content/vendor/js")

    @RenderSection("scripts", required: false)

    <script>
        $("#KeyInput").change(function (e) {
            debugger
            var keySearch = $("#KeyInput").val();
            window.location.href = "/Posts/searchPost?keySearch=" + keySearch;
